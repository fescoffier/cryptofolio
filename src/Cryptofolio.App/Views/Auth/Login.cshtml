@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center h-100">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
        <form class="form" method="post" asp-controller="auth" asp-action="login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="card card-login card-white">
                <div class="card-header p-0 position-relative">
                    <img alt="" src="@Url.Content("~/img/card-primary.png")" />
                    <h1 class="card-title p-3" style="font-weight: bold;">Log in with your personal account</h1>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="tim-icons icon-email-85"></i>
                            </div>
                        </div>
                        <input asp-for="Email"
                               class="form-control"
                               placeholder="Email"
                               onfocus="$(this).closest('.input-group').addClass('input-group-focus')"
                               onblur="$(this).closest('.input-group').removeClass('input-group-focus')" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger mb-2 d-block "></span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="tim-icons icon-lock-circle"></i>
                            </div>
                        </div>
                        <input asp-for="Password"
                               class="form-control"
                               placeholder="Password"
                               onfocus="$(this).closest('.input-group').addClass('input-group-focus')"
                               onblur="$(this).closest('.input-group').removeClass('input-group-focus')" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger mb-2 d-block"></span>
                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-primary btn-lg btn-block mb-3" value="Log in" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
